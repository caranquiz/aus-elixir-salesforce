<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Payment_Frequency_Cycle_Input_Validation</fullName>
    <active>true</active>
    <description>Payment Frequency Cycle should not be less than or equal to zero .
Payment Frequency Cycle should not be allowed to input for Payment Frequency other than Monthly, Weekly and Daily</description>
    <errorConditionFormula>AND(NOT(ISNULL(loan__Payment_Frequency_Cycle__c) ) ,OR(loan__Payment_Frequency_Cycle__c  &lt;= 0 , AND( loan__Payment_Frequency_Cycle__c &gt; 1,OR(ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Bi-weekly&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Semi-Monthly&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Bi-Monthly&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Quarterly&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Semi-Annual&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Annual&#39;),
ISPICKVAL(loan__Frequency_of_Loan_Payment__c, &#39;Single-Payment&#39;)))))</errorConditionFormula>
    <errorDisplayField>loan__Payment_Frequency_Cycle__c</errorDisplayField>
    <errorMessage>Kindly Add correct Value for Frequency Cycle , Either value is less than or equal to zero, or selected Payment Frequency is not supported.</errorMessage>
</ValidationRule>
