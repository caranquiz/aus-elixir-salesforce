<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Company</field>
        <field>RecordType</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dcherry@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jregan@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jshastri@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>msinclair@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rjohnston@orde.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Submit for Approval</label>
        <name>Submit_for_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dcherry@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jshastri@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>msinclair@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rjohnston@orde.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>2nd Lead Approval</label>
        <name>X2nd_Lead_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Approval Process for Lead Conversion</description>
    <emailTemplate>cnotify__Notification_Templates/Lead_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approval_Accepted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Mark_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>lead</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Lead_Rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Lead Approval 2 Step</label>
    <recallActions>
        <action>
            <name>status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
