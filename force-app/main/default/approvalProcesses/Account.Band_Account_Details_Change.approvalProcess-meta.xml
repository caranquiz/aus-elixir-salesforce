<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>allInternalUsers</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Bank_Account_Name__c</field>
        <field>Bank_Account_Name_Change__c</field>
        <field>BSB__c</field>
        <field>BSB_Change__c</field>
        <field>Bank_Account_Number__c</field>
        <field>Bank_Account_Change__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dcherry@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rharkness@orde.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rjohnston@orde.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Bank Account Details Change Approval</label>
        <name>Bank_Account_Details_Change_Approval</name>
    </approvalStep>
    <description>Bank Account Details Changes for Aggregators, Brokers, Values, Solicitors</description>
    <emailTemplate>cnotify__Notification_Templates/Aggregator_Broker_Solicitor_Valuer_Bank_Account_Change</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Bank_Account_Change_Approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Bank_Account_Number_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>BSB_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Account_Name_Field</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Bank_Account_Change_Rejection_Notification</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Bank Account Details Change</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
