<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Institution_Name_Length_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>OR(LEN(Institution_Name__c) > 16, ISNUMBER(Institution_Name__c), ISBLANK(Institution_Name__c))</errorConditionFormula>
    <errorDisplayField>Institution_Name__c</errorDisplayField>
    <errorMessage>Institution Name can only contain alphabets and length cannot be greater than 16</errorMessage>
</ValidationRule>
