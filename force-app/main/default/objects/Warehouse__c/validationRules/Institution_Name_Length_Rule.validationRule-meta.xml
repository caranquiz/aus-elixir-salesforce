<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Institution_Name_Length_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>OR(OR(LEN(Institution_Name__c) &gt; 16, ISNUMBER(Institution_Name__c), ISBLANK(Institution_Name__c)), OR(LEN(Collection_Bank_Account_Name__c) &gt; 16, ISNUMBER(Collection_Bank_Account_Name__c), ISBLANK(Collection_Bank_Account_Name__c)))</errorConditionFormula>
    <errorMessage>Institution Name and Collection Bank Account Name can only contain alphabets and length cannot be greater than 16</errorMessage>
</ValidationRule>
