<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>loan__Interest_Only_Check</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( loan__Interest_Calculation_Method__c  , &#39;Interest Only&#39;),
 ISBLANK(loan__Interest_Only_Period__c)
)</errorConditionFormula>
    <errorMessage>&#39;Interest Only Period&#39; cannot be blank for an &#39;Interest Only&#39; loan product.</errorMessage>
</ValidationRule>
