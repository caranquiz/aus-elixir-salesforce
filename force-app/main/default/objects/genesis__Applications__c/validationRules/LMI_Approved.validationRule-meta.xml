<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>LMI_Approved</fullName>
    <active>true</active>
    <errorConditionFormula>IF(ISPICKVAL(genesis__Status__c,&apos;Recommended&apos;),IF(NOT(ISPICKVAL(LMI_Approved__c,&apos;Yes&apos;)),IF(ISPICKVAL(Lenders_Mortgage_Insurance__c,&apos;Yes&apos;),true,false),false),false)</errorConditionFormula>
    <errorMessage>LMI Approved should be Yes when Lenders Mortgage Insurance is Yes.</errorMessage>
</ValidationRule>
